@{
    ViewData["Title"] = "Flash Gordon!";
}

<main>
    <div id="gameWindow">
        <div id="gameHead">
            <h2 class="gameTitle">Game Time!</h2>
        </div>
        <div id="gameBody">
            <div id="flashCardStandin">
                <div id="gameCard">
                    <div id="flashCardCategory"></div>
                    <div id="flashCardContent"></div>
                </div>
                <button onclick="flipCard()" type="button" id="flipButton" class="centeredButton flashCardButton">Flip Card</button>
            </div>
            <button onclick="startGame()" type="button" class="centeredButton flashCardButton">Start</button>
        </div>
    </div>
</main>
<script src="~/js/editControls.js"></script>
<script src="~/js/gameControls.js"></script>